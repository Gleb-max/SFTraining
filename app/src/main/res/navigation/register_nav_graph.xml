<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/knowing_nav_graph"
    app:startDestination="@id/secondFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.example.sftraining.ui.registration.FirstFragment"
        android:label="first_start_fragment"
        tools:layout="@layout/first_start_fragment" >
        <action
            android:id="@+id/action_firstFragment_to_secondFragment"
            app:destination="@id/secondFragment" />
    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        android:name="com.example.sftraining.ui.registration.SecondFragment"
        android:label="SecondFragment" >
        <action
            android:id="@+id/action_secondFragment_to_thirdFragment"
            app:destination="@id/thirdFragment" />
    </fragment>
    <fragment
        android:id="@+id/thirdFragment"
        android:name="com.example.sftraining.ui.registration.ThirdFragment"
        android:label="ThirdFragment" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.sftraining.ui.registration.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_forgotPassFragment"
            app:destination="@id/forgotPassFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.sftraining.ui.registration.RegisterFragment"
        android:label="RegisterFragment" />
    <fragment
        android:id="@+id/forgotPassFragment"
        android:name="com.example.sftraining.ui.registration.ForgotPassFragment"
        android:label="ForgotPassFragment" />
</navigation>