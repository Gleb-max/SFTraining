<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/knowing_nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.sftraining.ui.registration.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_forgotPassFragment"
            app:destination="@id/forgotPassFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.sftraining.ui.registration.RegisterFragment"
        android:label="RegisterFragment" />
    <fragment
        android:id="@+id/forgotPassFragment"
        android:name="com.example.sftraining.ui.registration.ForgotPassFragment"
        android:label="ForgotPassFragment" />
    <fragment
        android:id="@+id/knowingFragment"
        android:name="com.example.sftraining.ui.registration.KnowingFragment"
        android:label="knowing_viewpager_fragment"
        tools:layout="@layout/knowing_viewpager_fragment" >
        <action
            android:id="@+id/action_knowingFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/knowingFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>